@model SpentViewModel
 

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Spent.Price">Price</label>
        <input asp-for="@Model.Spent.Price" class="form-control" placeholder="Price">
        <span asp-validation-for="@Model.Spent.Price" class="text-danger"></span>
        <br />
        <label asp-for="@Model.Spent.Amount">Amount</label>
        <input asp-for="@Model.Spent.Amount" class="form-control" placeholder="Amount">
        <span asp-validation-for="@Model.Spent.Amount" class="text-danger"></span>
        <br />
        <label asp-for="@Model.Spent.Date">Date</label>
        <input asp-for="@Model.Spent.Date" class="form-control" placeholder="Date">
        <span asp-validation-for="@Model.Spent.Date" class="text-danger"></span>
        <br />


        <label asp-for="@Model.Spent.ProductId">Product</label>
        <select asp-for="@Model.Spent.ProductId" class="form-control">
            @foreach (var product in Model.Products)
            {
                <option value=@product.Id>@product.Id - @product.Name</option>
            }
        </select>  <br />
        <label asp-for="@Model.Spent.SpentEntityId">Spent Entity</label>
        <select asp-for="@Model.Spent.SpentEntityId" class="form-control">
            @foreach (var spentEntity in Model.SpentEntities)
            {
                <option value=@spentEntity.Id>@spentEntity.Id - @spentEntity.Name</option>
            }
        </select> <br />

        <label asp-for="@Model.Spent.Description">Description</label>
        <input asp-for="@Model.Spent.Description" class="form-control" placeholder="Description">  <br />


        @if (Model.Spent.Id == null)
        {
            <button asp-controller="spent" asp-action="NewSpent" class="btn btn-primary mb-2">Create</button>
        }
        else
        {
            <button asp-controller="spent" asp-action="Edit" class="btn btn-primary mb-2">Edit</button>
        }
        <button asp-controller="spent" asp-action="Index" class="btn btn-primary mb-2">Back</button>
        <input asp-for="@Model.Spent.Id" type="hidden" />

    </div>
</form>